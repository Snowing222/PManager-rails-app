<div class="table-responsive">

<table class="table table-striped table-sm">
    <thead>
      <tr>
          <th>Company name</th>
          <th>Address</th>
          <th>Zip code</th>
      </tr>
    </thead>

    <tbody>
      <tr>
         <td><%=@company.name%></td>
         <td><%=@company.address%></td>
         <td><%=@company.zipcode%></td>
      </tr>
    </tbody>
</table>
<table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Contact</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
         <%@company.users.each do |u|%>
           <tr>
           <td><%=link_to u.name, u%></td>
           <td><%=u.role%></td>
           </tr>
         <%end%>
    </tbody>
    </table>
</div>