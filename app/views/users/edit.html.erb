<h1>Please Complete Your Profile</h2>
<%=form_for @user do |f|%>
<p><%=f.label :name%>
<%=f.text_field :name%></p>

<p><%=f.label :phone%>
<%=f.phone_field :phone%></p>

<p><%=f.label :role%>
<%=f.select :role, User.roles.keys%>

<p><%=f.label :company%>
<%=f.collection_select :company_id, Company.all, :id, :name%></p>
<br>

<%=f.submit%>

<%end%>

