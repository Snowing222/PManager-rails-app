<div class="table-responsive">

<%=form_tag('/users', method: :get)%>
<%=text_field_tag :search %>
<%=submit_tag "search"%>
<br>


<table class="table table-striped table-sm">
    <thead>
      <tr>
          <th>name</th>
          <th>role</th>
          <th>email</th>
          <th>phone</th>
          <th>company</th>
      </tr>

    </thead>

    <tbody>
        <%=render :collection=>@users, :partial=>'user', :as=>:user%>
     </tbody>

</table>
</div>
