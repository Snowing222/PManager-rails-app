<div class="table-responsive">

<table class="table table-striped table-sm">
    <thead>
      <tr>
          <th>name</th>
          <th>role</th>
          <th>email</th>
          <th>phone</th>
          <th>company</th>
      </tr>

    </thead>

    <tbody>
       <%@users.each do |u|%>
         <tr>
            <td><%=u.name%></td>
            <td><%=u.role%></td>
            <td><%=u.email%></td>
            <td><%=u.phone%></td>
            <td><%=link_to u.company.name, u.company%></td>
        </tr>
        <%end%>
     </tbody>

</table>
</div>
