<%= render partial: "layouts/errors", locals: {error_object: @user} %>
<div class ="col-md-12 text-center">
<h1>Log In</h1>
</div>

<%=form_tag(login_path) %>
  <div class="form-group">
  <%=label_tag :email%>
  <%=text_field_tag :email, nil, class: "form-control"%>
  </div>

  <div class="form-group">
  <%=label_tag  :password%>
  <%=text_field_tag :password, nil, class: "form-control"%>
  </div>

  <%=submit_tag "Log In",  class: "btn btn-block mybtn btn-primary tx-tfm"%>
  <div class="login-or">
    <hr class="hr-or">
    <span class="span-or">or</span>
  </div>

  <div class="col-md-12 mb-3">
  <p class="text-center">
    <a href="/auth/google_oauth2" class="google btn mybtn"><i class="fa fa-google-plus">
    </i> Signup using Google
    </a>
  </p>
  </div>
  
  <div class="form-group">
  <p class ="text-center">New User? <%=link_to 'Sign up NOW!', new_user_path%></p>
  </div>